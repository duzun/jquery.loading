{
  "name": "class-loading",
  "title": "Add class(es) to DOM elements while waiting for async action",
  "description": "Add class(es) to DOM elements while waiting for async action. Promise or callback.",
  "version": "1.2.1",
  "homepage": "https://github.com/duzun/jquery.loading",
  "author": {
    "name": "Dumitru Uzun",
    "email": "contact@duzun.me",
    "url": "https://DUzun.Me"
  },
  "types": "loading.d.ts",
  "module": "dist/loading.esm.js",
  "main": "dist/loading.js",
  "unpkg": "dist/loading.min.js",
  "reveal": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/duzun/jquery.loading.git"
  },
  "bugs": "https://github.com/duzun/jquery.loading/issues",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/duzun/jquery.loading/blob/master/LICENSE-MIT"
    }
  ],
  "dependencies": {
    "jquery": "^3.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@types/jquery": "^3.3.36",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^5.3.0",
    "verup": "^1.7"
  },
  "scripts": {
    "tsc": "npx tsc --build",
    "rollup": "npx rollup -c rollup.config.js",
    "build": "npm run tsc && npm run rollup",
    "verup": "verup"
  },
  "keywords": [
    "jquery",
    "load",
    "loading",
    "class",
    "promise",
    "asynchronously"
  ],
  "extra": {
    "verup": {
      "files": [
        "loading.ts"
      ]
    }
  },
  "jshintConfig": {
    "esversion": 9,
    "laxbreak": true,
    "laxcomma": true,
    "undef": true,
    "unused": true,
    "sub": true,
    "expr": true,
    "bitwise": false,
    "eqeqeq": false,
    "boss": true,
    "eqnull": true,
    "scripturl": true,
    "-W041": false
  }
}
